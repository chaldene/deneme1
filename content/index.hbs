---
title: Dashboard
sideVisibleLine: true
dragula: true
chartjs: true
tablesorter: true
ps: true
---

<!-- BEGIN: alert -->
<div class="row">
  <div class="col">
    <div class="alert alert-info alert-dismissible fade show" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">Ã—</span>
      </button>
      <h4>Welcome to {{pkg.name}} {{pkg.description}}</h4>
      <p>I hope you like it.</p>
    </div>
  </div>
</div>
<!-- END: alert -->

{{> dashboard-statsarea}}

<!-- BEGIN: .row -->
<div class="row">
  <div class="col-md-7">
    {{> dashboard-line}}
  </div>
  <div class="col-md-5">
    {{> dashboard-usa-map}}
  </div>
</div>
<!-- END: .row -->

<!-- BEGIN: .row -->
<div class="row">
  <div class="col-md-7">
    <div class="box">
      <header class="bg-turquoise text-white">
        <h4>Last 10 Users</h4>
      </header>
        <div class="box-body p-a-0 max-h-lg ps">
            {{> table-sorter modifier="table-inverse"}}
        </div>
    </div>
  </div>

<div class="col-md-5">
  <div class="box b-a">
    <header class="b-b">
      <h4>Todo</h4>
    </header>
    <div class="box-body p-a-0 max-h-lg ps">

      <ul class="todo-list is-order dragula" data-plugin="todo">
        {{#each db.todos}}
          {{#compare id "<" 11}}
            <li class="todo-item draggable handle {{#if completed}}is-done{{/if}}">
              <a href="#" class="todo-link">
                  {{#if completed}}
                    <i class="fa fa-fw fa-lg fa-check-square"></i>
                  {{else}}
                    <i class="fa fa-fw fa-lg fa-square-o"></i>
                  {{/if}}

                </a>
              <span class="todo-title">{{id}} - {{title}}</span>
            </li>
            <!-- /.todo-item -->
          {{/compare}}
        {{/each}}
      </ul>
      <!-- /.todo-list -->

    </div>
    <!-- /.box-body -->
  </div>
  <!-- /.box -->
</div>


</div>
<!-- END: .row -->


<!-- BEGIN: .row -->
<div class="row">
  <div class="col-md-4">
    <div class="box shadow-2dp b-r-2">
      <header class="b-b">
        <h4>Members</h4>
        <div class="box-tools">
          <span class="label label-success">5</span>
        </div>
      </header>
      <div class="box-body">
{{#if demo}}
  {{> member-demo}}
{{else}}
  {{> member}}
{{/if}}
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="box shadow-2dp b-r-2">
      <header class="b-b">
        <h4>Tasks</h4>
        <div class="box-tools">
          <div class="dropdown">
            <a class="dropdown-toggle" href="#" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
              <span class="fa fa-fw fa-ellipsis-v text-muted"></span>
            </a>
            <ul class="dropdown-menu animated flipInY pull-right">
              <li>
                <a href="#">Add Task</a>
              </li>
              <li>
                <a href="#">Edit Task</a>
              </li>
              <li>
                <a href="#">Delete Task</a>
              </li>
            </ul>
          </div>

        </div>
      </header>
      <div class="box-body">
        <ul class="tasks">

          {{#each db.users}}
          {{#compare id ">" 5}}

          <li class="task">
            <div class="task-media {{#ifEven id }}bg-alizarin{{else}}bg-emerland{{/ifEven}}">
              <i class="fa fa-fw {{#ifEven id }}fa-plus{{else}}fa-minus{{/ifEven}}"></i>
            </div>
            <div class="task-info">
              <a class="task-info-link" href="#">{{name}}</a>
              <span class="task-info-action">added new project</span>
              <a class="task-info-link" href="#">{{website}}</a>
              <div class="task-info-time">
                <i class="fa fa-fw fa-clock-o"></i> <span data-momentum=relative>{{moment}}</span>
              </div>
            </div>
          </li>

            {{/compare}}
          {{/each}}

        </ul>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="box shadow-2dp">
      <header>
        <h4>Visitors <small class="text-muted">by city</small></h4>
      </header>
      <div class="box-body p-a-0">

        <nav class="list-group m-a-0">

        {{#each db.users}}
          <a href="#" class="list-group-item b-r-0">
            {{address.city}}
            <span class="pull-right">{{random 1 100}}%</span>
            <span class="list-group-progress" style="width: {{random 1 100}}%;"></span>

          </a>
          {{/each}}

        </nav>
      </div>
    </div>
  </div>

</div>
<!-- END: .row -->
