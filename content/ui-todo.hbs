---
title: Todo
category: ui
dragula: true
---
<div class="box">
  <header>
    <h4>Todo Basic</h4>
  </header>
  <div class="box-body">

    <ul class="todo-list" data-plugin="todo">
      {{#each db.todos}}
        {{#compare id "<" 11}}
          <li class="todo-item {{#if completed}}is-done{{/if}}">
            <a href="#" class="todo-link">
            {{#if completed}}
              <i class="fa fa-fw fa-lg fa-check-square"></i>
            {{else}}
              <i class="fa fa-fw fa-lg fa-square-o"></i>
            {{/if}}
          </a>
            <span class="todo-title">{{title}}</span>
          </li>
          <!-- /.todo-item -->
        {{/compare}}
      {{/each}}
    </ul>
    <!-- /.todo-list -->

  </div>
  <!-- /.box-body -->
</div>
<!-- /.box -->

